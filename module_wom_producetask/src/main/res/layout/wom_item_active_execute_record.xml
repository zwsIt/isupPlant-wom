<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_10"
    android:background="@color/white"
    android:elevation="@dimen/dp_2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_5">
        <TextView
            android:id="@+id/activityName"
            android:tag="activityName"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/wom_activity"
            android:textSize="@dimen/fontSize_16sp"
            android:textColor="@color/wom_black_333333"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/activeType"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:tag="activeType"
            android:text="@string/wom_active_type"
            android:textSize="@dimen/fontSize_15sp"
            android:textColor="@color/wom_black_333333"
            android:textStyle="bold"/>
    </LinearLayout>
    <include layout="@layout/ly_line_light"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_80"
                android:id="@+id/materialNameLl"
                android:tag="materialNameLl"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="@string/wom_material_name"
                    android:textColor="@color/titleTextColor"
                    android:textSize="@dimen/fontSize_13sp"
                    android:drawableStart="@drawable/ic_work_describe"
                    android:drawablePadding="@dimen/dp_5"/>

                <com.supcon.mes.mbap.view.CustomTextView
                    android:id="@+id/materialName"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_36"
                    android:tag="materialName"
                    app:content_color="@color/dark_text"
                    app:content_size="14"
                    app:key_width="0dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/materialCodeLl"
                android:tag="materialCodeLl"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="@string/wom_material_code"
                    android:textColor="@color/titleTextColor"
                    android:textSize="@dimen/fontSize_13sp"
                    android:drawableStart="@drawable/ic_eam_encode"
                    android:drawablePadding="@dimen/dp_5"/>
                <com.supcon.mes.mbap.view.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_36"
                    android:id="@+id/materialCode"
                    android:tag="materialCode"
                    app:key_width="0dp"
                    app:content_size="14"
                    app:content_color="@color/dark_text"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/batchNumLl"
                android:tag="batchNumLl"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:id="@+id/materialBatchNumTv"
                    android:tag="materialBatchNumTv"
                    android:text="@string/wom_material_batch_num"
                    android:textColor="@color/titleTextColor"
                    android:textSize="@dimen/fontSize_13sp"
                    android:drawableStart="@drawable/ic_batch_number"
                    android:drawablePadding="@dimen/dp_5"/>
                <com.supcon.mes.mbap.view.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_36"
                    android:id="@+id/batchNum"
                    android:tag="batchNum"
                    app:text_width="0dp"
                    app:content_size="14"
                    app:content_color="@color/dark_text"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/checkResultLl"
                android:tag="checkResultLl"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="@string/wom_check_result"
                    android:textColor="@color/titleTextColor"
                    android:textSize="@dimen/fontSize_13sp"
                    android:drawableStart="@drawable/ic_eam_name"
                    android:drawablePadding="@dimen/dp_5"/>
                <com.supcon.mes.mbap.view.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_36"
                    android:id="@+id/checkResult"
                    android:tag="checkResult"
                    app:key_width="0dp"
                    app:content_size="14"
                    app:content_color="@color/dark_text"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/taskProcessNameLl"
                android:tag="taskProcessNameLl"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="@string/wom_process_name"
                    android:textColor="@color/titleTextColor"
                    android:textSize="@dimen/fontSize_13sp"
                    android:drawableStart="@drawable/ic_factory_model_unit"
                    android:drawablePadding="@dimen/dp_5"/>
                <com.supcon.mes.mbap.view.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_36"
                    android:id="@+id/taskProcessName"
                    android:tag="taskProcessName"
                    app:key_width="0dp"
                    app:content_size="14"
                    app:content_color="@color/dark_text"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="@string/middleware_start_time"
                    android:textColor="@color/titleTextColor"
                    android:textSize="@dimen/fontSize_13sp"
                    android:drawableStart="@drawable/ic_time"
                    android:drawablePadding="@dimen/dp_5"/>
                <com.supcon.mes.mbap.view.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_36"
                    android:id="@+id/time"
                    android:tag="time"
                    app:key_width="0dp"
                    app:content_size="14"
                    app:content_color="@color/dark_text"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/taskState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sh_status"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/dp_5"
            android:maxWidth="@dimen/dp_120"
            android:maxLines="1"
            android:paddingStart="12dp"
            android:paddingTop="3dp"
            android:paddingEnd="12dp"
            android:paddingBottom="3dp"
            android:tag="taskState"
            android:textColor="@color/lubricateBg"
            android:textSize="14sp"
            android:text="@string/taskState" />
    </RelativeLayout>
</LinearLayout>